<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="@color/blueberry_basket"
        android:src="@drawable/logo_app" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:id="@+id/back_img"
        android:src="@drawable/arrow_black"/>

    <Button
        android:id="@+id/btn_back"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="onBackClick" />

    <TextView
        android:id="@+id/Forgot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="10dp"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/enteremail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:text="please enter your email you signed up with"
        android:textColor="@color/black"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/enteremail_tv"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text_states"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="15dp" />

    <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/retrievepassword_btn"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_below="@id/email_et"
    android:layout_marginStart="50dp"
    android:layout_marginTop="40dp"
    android:layout_marginEnd="50dp"
    android:background="@color/blue"
    android:elevation="2dp"
    android:outlineAmbientShadowColor="@color/blue"
    android:text="Retrieve Password"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:textSize="17dp" />



</RelativeLayout>