    <LinearLayout
        android:background="@drawable/layout_bg"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/enter_property_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="16dp"
                    android:text="Enter Your Details"
                    android:textAlignment="center"
                    android:background="@color/light_grey"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="16dp"
                    android:text="Location:"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/property_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edit_bg"
                    android:hint=" Manama, Isa Town, Riffa etc.. "
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="16dp"
                    android:text="Type of Property:"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/property_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edit_bg"
                    android:hint=" Home, Room, Flat, Office"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="16dp"
                    android:text="Total Bedrooms &amp; Bathrooms:"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/property_bedroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edit_bg"
                    android:hint="1, 2 , 3..."
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="16dp"
                    android:text="Monthly Rent:"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/property_rent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edit_bg"
                    android:hint="Price "
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="16dp"
                    android:text="Property Description:"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/property_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edit_bg"
                    android:hint="Property Details "
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="16dp"
                    android:text="Attach Images(If Any):"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <ImageView
                    android:id="@+id/imgView"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/img_icon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addImageBtn"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse for Image" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_submit_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@color/light_slate_blue"
                    android:padding="16dp"
                    android:text="Submit your Ad"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</RelativeLayout>